<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>CartFilter</filter-name>
        <filter-class>filters.CartFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>filters.AuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CategoriesFilter</filter-name>
        <filter-class>filters.CategoriesFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CategoriesFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CartFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controllers.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthenticationServlet</servlet-name>
        <servlet-class>controllers.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>controllers.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImageServlet</servlet-name>
        <servlet-class>controllers.ImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetailsServlet</servlet-name>
        <servlet-class>controllers.ProductDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>controllers.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>controllers.CheckoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseHistoryServlet</servlet-name>
        <servlet-class>controllers.PurchaseHistoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderDataServlet</servlet-name>
        <servlet-class>controllers.OrderDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminUserLogsServlet</servlet-name>
        <servlet-class>controllers.AdminUserLogsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminUserOrdersServlet</servlet-name>
        <servlet-class>controllers.AdminUserOrdersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductsOverviewServlet</servlet-name>
        <servlet-class>controllers.ProductsOverviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/pocetna</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthenticationServlet</servlet-name>
        <url-pattern>/prijava</url-pattern>
        <url-pattern>/odjava</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registracija</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageServlet</servlet-name>
        <url-pattern>/img/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetailsServlet</servlet-name>
        <url-pattern>/product/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseHistoryServlet</servlet-name>
        <url-pattern>/povijest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderDataServlet</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminUserLogsServlet</servlet-name>
        <url-pattern>/admin/userLogs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminUserOrdersServlet</servlet-name>
        <url-pattern>/admin/userOrders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductsOverviewServlet</servlet-name>
        <url-pattern>/proizvodi/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>pocetna</welcome-file>
    </welcome-file-list>
</web-app>
